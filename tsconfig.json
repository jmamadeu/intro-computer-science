{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "rootDir": "./",

    "baseUrl": "./src",

    "allowJs": true,
    "checkJs": true,

    "removeComments": true,

    "importHelpers": true,

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true,
    
  },
  "exclude": ["babel*"]
}
